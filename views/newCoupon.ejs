<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="https://cdn-icons-png.flaticon.com/512/25/25694.png" class="image">Főoldal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/newCoupon"><img src="https://static.thenounproject.com/png/2310577-200.png" class="image">Új kupon</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <form method="post">
    <div>
      <label>
        Darab neve:<br>
        <input type="text" name="title" class="form-control" placeholder="Vuk">
        
      </label>
    </div>
    <div>
      <label>
        Kedvezmény:<br>
        <input type="number" name="percentage" class="form-control" placeholder="69">
      </label>
    </div>
  
    <div>
      <label>
        Kuponkód:<br>
        <input type="text" name="code" class="form-control" placeholder="ABCD-123456">
      </label>
    </div>
  
    <input type="submit" value="Hozzáadás" class="btn btn-primary">
    <a href="/" class="btn btn-primary">Vissza</a>
    <% if (errors) { %>
      <% errors.forEach((msg) => { %>
        <p class="errorMessage"><%= msg %></p>
        <% });
    } %>
  </form>
</body>
</html>
